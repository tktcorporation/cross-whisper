{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "rustup@latest",
    "libiconv@latest",
    "nodejs@22",
    "jq@latest",
    "direnv@latest",
    "webkitgtk@latest",
    "flake:nixpkgs#webkitgtk^dev",
    "librsvg@latest",
    "pnpm@latest",

    // for tauri
    "pkg-config@latest",
    "gobject-introspection@latest",
    "at-spi2-atk@latest",
    "atkmm@latest",
    "cairo@latest",
    "gdk-pixbuf@latest",
    "glib@latest",
    "flake:nixpkgs#glib^dev",
    "gtk3@latest",
    "flake:nixpkgs#gtk3^dev",
    "harfbuzz@latest",
    "libsoup_3@latest",
    "flake:nixpkgs#cairo^dev",
    "flake:nixpkgs#gdk-pixbuf^dev",
    "flake:nixpkgs#libsoup_3^dev",
    "pango@latest",
    "flake:nixpkgs#pango^dev",
    "openssl@latest",
    "haskellPackages.webkit2gtk3-javascriptcore@latest",
    "webkit@latest",
  ],
  "shell": {
    "init_hook": [
      "export PATH=\"$HOME/.cargo/bin:$PATH\"",
      "rustup default stable",
      "export PKG_CONFIG_PATH=$(pkg-config --variable pc_path pkg-config):$PKG_CONFIG_PATH",
    ],
    "scripts": {
      "test":       "cargo test -- --show-output",
      "start":      "cargo run",
      "build-docs": "cargo doc",
    },
  },
}
