{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "rustup@latest",
    "libiconv@latest",
    "nodejs@22",
    "jq@latest",
    "direnv@latest",
    "webkitgtk@latest",
    "librsvg@latest",
    "pnpm@latest",

    // for tauri
    "pkg-config@latest",
    "gobject-introspection@latest",
    "at-spi2-atk@latest",
    "atkmm@latest",
    "cairo@latest",
    "gdk-pixbuf@latest",
    "glib@latest",
    "gtk3@latest",
    "harfbuzz@latest",
    "librsvg@latest",
    "libsoup_3@latest",
    "pango@latest",
    "openssl@latest"
  ],
  "shell": {
    "init_hook": [
      "export PATH=\"$HOME/.cargo/bin:$PATH\"",
      "rustup default stable"
    ],
    "scripts": {
      "test":       "cargo test -- --show-output",
      "start":      "cargo run",
      "build-docs": "cargo doc"
    }
  }
}
